@model List<Planet>

<h2>Far Far Away Galaxy Planets</h2>

The planets of the star wars galaxy should be here!

@foreach(Planet planet in Model)
{
    <p>Name: @planet.Name</p>
    <p>Population: @planet.Population</p>
}

<h2>Milky Way Planets</h2>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Population</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var planet in Model)
        {
            <tr>
                <td>@planet.Name</td>
                <td>@planet.Population</td>
            </tr>  
        }
    </tbody>
</table>



